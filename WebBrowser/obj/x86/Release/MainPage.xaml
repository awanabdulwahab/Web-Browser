<Page
    x:Class="WebBrowser.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebBrowser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource wbBackgroundColor}">
        <!--Base Grid-->
    <Grid x:ConnectionId='2' x:Name="BaseGrid">
        <Grid.RowDefinitions>
            <!--Title Bar Row Definition-->
            <RowDefinition Height="25"></RowDefinition> 
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <!--Title Bar Grid-->
        <Grid x:ConnectionId='3' x:Name="TitleBarGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition> <!--Navigation Button Column Definition-->
                <ColumnDefinition Width="2*"></ColumnDefinition> <!--Search Bar Column Definition-->
                <ColumnDefinition></ColumnDefinition> <!--setting Column Definition-->
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Margin="10,0">
                <Button x:ConnectionId='4' x:Name="backBtn" Margin="0,0,10,0" Background="{x:Null}">
                    <Image Source="Assets/imgs/back.png"></Image>
                </Button>
                <Button x:ConnectionId='5' x:Name="forwardBtn"  Background="{x:Null}">
                    <Image Source="Assets/imgs/forward.png"></Image>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

